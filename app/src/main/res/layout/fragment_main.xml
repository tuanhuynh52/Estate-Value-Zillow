<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tuan.Estate_Value_Zillow.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:weightSum="1">

    <ImageView
        android:id="@+id/brand_zillow"
        android:src="@drawable/zillow_brand_icon"
        android:contentDescription="@string/powered_by_zillow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="120dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="300dp">

        <ImageView
            android:src="@drawable/home_background"
            android:scaleType="fitCenter"
            android:contentDescription="@string/homepage_background"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="250dp" />

        <LinearLayout
            android:background="@color/body_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:gravity="center_vertical">

            <TextView
                android:text="Click"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:gravity="center_vertical|end"
                android:layout_weight="0.55"
                tools:ignore="HardcodedText,InefficientWeight" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_search"
                android:id="@+id/search_button"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="to search your property"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
